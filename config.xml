<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "biz.lattu"
        versionCode = "1" 
        version     = "0.0.1" >

    <!-- versionCode is optional and Android only -->

    <name>PhoneGap Hello World</name>

    <description>
        This is an Hello Word app built using PhoneGap Build. 
    </description>

    <author href="http://lattu.biz" email="none@lattu.biz">
        Matti Lattu
    </author>

	<!-- Specify build platforms -->
	<!-- <gap:platform name="ios" /> -->
	<gap:platform name="android" />
	<gap:platform name="winphone" />

	<!-- features are interpreted to permissions -->
	<!-- network feature is always required -->
	<feature name="http://api.phonegap.com/1.0/network" />

	<!-- Default icon -->
	<icon src="icon.png" />
	
	<icon src="icon_android_ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="icon_android_mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="icon_android_hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="icon_android_xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
	<icon src="icon_android_xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />
	<icon src="icon_android_xxxhdpi.png" gap:platform="android" gap:qualifier="xxxhdpi" />

</widget>
